{
  "manifest_version": 3,
  "name": "TweetCode",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": { 
      "default_popup": "hello.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["./scripts/content.js"],
      "run_at": "document_idle"
    }
  ]
}
